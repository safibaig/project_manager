<%= content_for :sidebar do %>
	<div class="well sidebar-nav">
		<%= render 'shared/general_admin' %>	
	</div>
<% end %>
<div class="row-fluid">
	<%= yield(:fieldset) %>
		<%= simple_form_for @user, :html => { :class => 'well', :multipart => true } do |f| %>
		
		<div class="row-fluid">
			<div class="span4">
				<%= f.input :email, :input_html => {:class => "generic"} %>
			</div>
			<div class="span4">
				<%= f.input :name, :input_html => {:class => "generic user"} %>
			</div>
			<div class="span4">
				<%= f.input :last_name, :input_html => {:class => "generic user"} %>
			</div>
		</div>
		
		<div class="row-fluid">
			<div class="span4">
				<%= f.input :gender, :collection => User::GENDERS, :prompt => "Select the employee gender", :input_html => {:class => "generic_select"} %>
			</div>
			<div class="span4">
				<%= f.label :image %>
				<%= f.file_field :image %>
			</div>
			<div class="span4">
				<%= f.input :job_title, :input_html => {:class => "generic executive"} %>
			</div>
		</div>
		
		<div class="row-fluid">
			<div class="span4">
				<%= f.input :degree, :input_html => {:class => "generic executive"} %>
			</div>
			<div class="span4">
				<%= f.input :phone, :input_html => {:class => "generic phone"} %>
			</div>
		</div>
		
		<div class="row-fluid">
			<div class="span8">
				<%= f.input :address, :input_html => { :rows => 5, :cols => 20, :class => "generic_area" } %>
			</div>
		</div>
		
		<div class="form-actions reset-margins-bottom">
			<%= f.submit "Save", :class => "btn btn-primary" %>
		</div>
		<% end %>
</div>
