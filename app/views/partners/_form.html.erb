<%= simple_form_for @partner, :html => { :class => 'form-horizontal' } do |f| %>
  
  	<%= f.input :partner_name %>
	<%= f.input :user_id  %>
	<%= f.input :status %>
	<%= f.input :business_type %>
	<%= f.input :name %>
	<%= f.input :phone %>
	<%= f.input :email %>
	<%= f.input :website %>
	<%= f.input :address %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                partners_path, :class => 'btn' %>
  </div>
<% end %>
