<%= content_for :sidebar do %>
	<div class="well sidebar-nav">
		<%= render 'shared/general_admin' %>
		<ul class="nav nav-list">
			<li class="nav-header">Suppliers Administration</li>
			<li><%= link_to "New Supplier", new_supplier_path %></li>
			<li><%= link_to "View All", suppliers_path %></li>
			<li class="nav-header">Search Supplier</li>
			<li>
				<%= form_tag suppliers_path, :method => :get do %>
					<%= text_field_tag 'search', params[:search], :class => 'generic glass', :placeholder => "Search supplier..." %>
				<% end %>
			</li>
		</ul>	
		
	</div>
<% end %>

<%= simple_form_for @supplier, :html => { :class => 'well' } do |f| %>
  	
	<div class="row-fluid">
		<div class="span4">
			<%= f.input :company_name, :input_html => {:class => "generic executive"} %>
		</div>
		<div class="span4">
			<%= f.input :contact_name, :input_html => {:class => "generic user"}  %>
		</div>
		<div class="span4">
			<%= f.input :business_unit_tokens, :input_html => { :class => "generic", 'data-interests' => prepopulate_interests(@supplier) }, :label => "Interests" %>
		</div>
	</div>
  	
	<div class="row-fluid">
		<div class="span4">
			<%= f.input :phone, :input_html => {:class => "generic phone"} %>	
		</div>
		<div class="span4">
			<%= f.input :email, :input_html => {:class => "generic"} %>
		</div>
		<div class="span4">
			<%= f.input :bank_account, :input_html => {:class => "generic general"} %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span4">
			<%= f.input :street, :input_html => {:class => "generic map"} %>
		</div>
		<div class="span4">
			<%= f.input :city, :input_html => {:class => "generic map"} %>
		</div>
		<div class="span4">
			<%= f.input :state, :input_html => {:class => "generic map"} %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span4">
			<%= f.input :country, :input_html => {:class => "generic map"}, :as => :string %>
		</div>
		<div class="span4">
			<%= f.label :image %>
			<%= f.file_field :image %>
		</div>
	</div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                suppliers_path, :class => 'btn' %>
  </div>
<% end %>
