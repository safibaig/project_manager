<fieldset id="list_of_projects" class="">
	<legend>List of Projects</legend>
</fieldset>
<br />
<table class="table table-bordered">
  <thead>
    <tr>
		<th>Company Name</th>
	      <th>Business Type</th>
	      <th>Interests</th>
		  <th>Contact Name</th>
	      <th>Phone</th>
		  <th>Mobile</th>
	      <th>Email</th>
	      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
        <td><%= link_to prospect.company_name, prospect %></td>
        <td><%=prospect.business_type %></td>
        <td><%=prospect.interests %></td>
        <td><%=prospect.contact_name %></td>
        <td><%=prospect.phone %></td>
        <td><%=prospect.mobile %></td>
        <td><%=prospect.email %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_prospect_path(prospect), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      prospect_path(prospect),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_prospect_path,
            :class => 'btn btn-primary' %>
