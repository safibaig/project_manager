<%= simple_form_for @prospect, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :business_type %>
  <%= f.input :business_unit_id %>
  <%= f.input :name %>
  <%= f.input :phone %>
  <%= f.input :mobile %>
  <%= f.input :email %>
  <%= f.input :website %>
  <%= f.input :address %>
  <div class="form-actions">
    <%= f.submit "Save", :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                prospects_path, :class => 'btn' %>
  </div>
<% end %>
