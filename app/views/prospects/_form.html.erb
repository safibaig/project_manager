<%= simple_form_for @prospect, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :company_name %>
  <%= f.input :business_type %>
  <%= f.input :interests %>
  <%= f.input :contact_name %>
  <%= f.input :phone %>
  <%= f.input :mobile %>
  <%= f.input :email %>
  <%= f.input :website %>
  <%= f.input :address %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to "Cancel", prospects_path, :class => 'btn' %>
  </div>
<% end %>
