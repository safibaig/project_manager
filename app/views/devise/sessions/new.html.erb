<div id="sign_in_form">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:autocomplete => "off"}) do |f| %>
	<fieldset>
		<legend>Welcome to InvoManager</legend>
		<div class="control-group">
			<%= f.label :email, "Email", :class => "control-label" %>
			<div class="controls">
				<%= f.email_field :email, :class => "input-xlarge generic email" %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :password, "Password", :class => "control-label" %>
			<div class="controls">
				<%= f.password_field :password,  :class => "input-xlarge generic password" %>
			</div>
		</div> 

	  <% if devise_mapping.rememberable? -%>
		<div class="control-group">
			<div class="controls">
				<%= f.label :remember_me, "#{f.check_box :remember_me} Remember me".html_safe, :class => "checkbox" %>
			</div>
		</div>
	  <% end -%>

