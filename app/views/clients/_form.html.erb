<div class="row-fluid">
	<%= simple_form_for @client, :html => { :class => 'form-horizontal' } do |f| %>
		<%= yield(:fieldset) %>
		<%= f.input :company_name, :input_html => { :class => "generic" } %>
		<%= f.input :business_type, :input_html => { :class => "generic" } %>
		<%= f.input :business_unit_tokens, :input_html => { :class => "generic", 'data-interests' => prepopulate_interests(@client) } %>
		<%= f.input :contact_name, :input_html => { :class => "generic" } %>
		<%= f.input :phone, :input_html => { :class => "generic" } %>
		<%= f.input :mobile, :input_html => { :class => "generic" } %>
		<%= f.input :email, :input_html => { :class => "generic" } %>
		<%= f.input :website, :input_html => { :class => "generic" } %>
		<%= f.input :address, :input_html => { :rows => 5, :cols => 20, :class => "generic" } %>
		<div class="form-actions">
		 <%= f.button :submit, :class => 'btn-primary' %>
		 <%= link_to "Cancel", clients_path, :class => 'btn' %>
		</div>
	<% end %>
</div>

